CREATE TABLE -> table_name 
Table_name -> ( field-def  );
Field-def -> field-def name  field-type | field-def’
Field-def’-> ,field-def | EMPTY
Field-def name -> name
Field-type -> [ TYPE ]
TYPE -> null | not null | DATE | integer | number | character
DROP TABLE-> table_name;
INSERT INTO-> table_name | VALUES | 
VALUES-> literal | ,literal
DELETE FROM-> table | WHERE
WHERE-> CONDITION | ,CONDITION
CONDITION-> field-name, operation, condition-name
DATE -> timestamp
